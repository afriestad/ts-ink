    "@typescript-eslint/eslint-plugin-tslint": "^7.0.2",
    "@typescript-eslint/parser": "^7.10.0",
    "bun-types": "^1.1.10",
    "eslint": "^9.3.0",
    "eslint-plugin-prettier": "^5.1.3",
    "glob": "^10.4.1",
    "prettier": "3.2.5",
    "tsc": "^2.0.4",
    "tslint": "6.1.3",
    "typescript": "^5.4.5"
  }
